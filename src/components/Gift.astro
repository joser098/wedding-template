<style>
    main {
        background: url("/fondo-papel.png");
        padding: 60px 0;
    }
    #container {
        background-color: #fff;
        background-position: center center;
        width: 600px;
        padding: 25px 2px 50px;
        height: 200px;
        text-align: center;
        line-height: 30px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    p {
        font-size: 19px;
        color: #666666;
        margin: 5px;
        margin-bottom: 20px;
        font-family: "Noto Serif Georgian", serif;
        font-weight: 300;
    }
    img {
        width: 80px;
        margin-top: 25px;
        margin-bottom: 5px;
    }
    #btn {
        color: #ffffff;
        border: 2px solid #dcc8b4;
        border-radius: 30px;
        transition: 1s;
        background-color: #dcc8b4;
        padding: 5px 40px;
        font-size: 16px;
        font-weight: 450;
