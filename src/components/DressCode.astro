<script>
  const ele = document.querySelectorAll(".fade-in");
  const wh = window.innerHeight * 0.8;

  document.addEventListener("scroll", () => {
    ele.forEach((e) => {
      if (e.getBoundingClientRect().top < wh) {
        e.classList.add("show");
      }
    });
  });
</script>

